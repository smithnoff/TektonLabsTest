<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/card_corner_radius"
    >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="true"
                android:id="@+id/item_title"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:textSize="@dimen/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/item_place"
                android:textSize="@dimen/text_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Place"
                android:drawableTint="@color/colorAccent"
                android:drawableStart="@android:drawable/ic_dialog_map"
                android:drawableLeft="@android:drawable/ic_dialog_map"
                android:padding="@dimen/activity_vertical_margin"/>
            <TextView
                android:id="@+id/item_date_hour"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Hour/Date"
                android:padding="@dimen/activity_vertical_margin"/>
            <Button
                android:id="@+id/item_bt_suscribe"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="suscribirse"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>